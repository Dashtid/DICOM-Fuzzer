# Testing Environment Configuration (CI/CD)
ENVIRONMENT=testing
DEBUG=false

# Predictable fuzzing for tests
FUZZING__METADATA_PROBABILITY=0.5
FUZZING__HEADER_PROBABILITY=0.5
FUZZING__PIXEL_PROBABILITY=0.5
FUZZING__MAX_MUTATIONS_PER_FILE=2
FUZZING__MAX_FILES_PER_CAMPAIGN=50
FUZZING__BATCH_SIZE=5
FUZZING__PARALLEL_WORKERS=2

# Strict security for testing
SECURITY__MAX_FILE_SIZE_MB=10
SECURITY__STRICT_VALIDATION=true
SECURITY__DETECT_NULL_BYTES=true
SECURITY__DETECT_LONG_VALUES=true

# Test-specific paths
PATHS__INPUT_DIR=./test_samples
PATHS__OUTPUT_DIR=./test_output
PATHS__CRASH_DIR=./test_crashes
PATHS__REPORT_DIR=./test_reports
PATHS__LOG_DIR=./test_logs

# Minimal logging for tests
LOGGING__LOG_LEVEL=WARNING
LOGGING__LOG_FORMAT=json
LOGGING__LOG_TO_FILE=false
LOGGING__LOG_TO_CONSOLE=false

# Essential features only
ENABLE_PROFILING=false
ENABLE_CRASH_ANALYSIS=true
ENABLE_STATISTICS=false
