# DICOM-Fuzzer Configuration
# Copy this file to .env and customize for your environment

# Application Settings
APP_NAME=DICOM-Fuzzer
APP_VERSION=1.0.0
ENVIRONMENT=development  # Options: development, testing, production
DEBUG=false

# Fuzzing Configuration
FUZZING__METADATA_PROBABILITY=0.8
FUZZING__HEADER_PROBABILITY=0.6
FUZZING__PIXEL_PROBABILITY=0.3
FUZZING__MAX_MUTATIONS_PER_FILE=3
FUZZING__MAX_FILES_PER_CAMPAIGN=1000
FUZZING__MAX_CAMPAIGN_DURATION_MINUTES=60
FUZZING__BATCH_SIZE=10
FUZZING__PARALLEL_WORKERS=4

# Security Configuration
SECURITY__MAX_FILE_SIZE_MB=100
SECURITY__MAX_ELEMENTS=10000
SECURITY__MAX_SEQUENCE_DEPTH=10
SECURITY__MAX_PRIVATE_TAGS=100
SECURITY__MAX_PRIVATE_DATA_MB=1
SECURITY__STRICT_VALIDATION=false
SECURITY__DETECT_NULL_BYTES=true
SECURITY__DETECT_LONG_VALUES=true

# Path Configuration
PATHS__INPUT_DIR=./samples
PATHS__OUTPUT_DIR=./output
PATHS__CRASH_DIR=./crashes
PATHS__REPORT_DIR=./reports
PATHS__LOG_DIR=./logs
PATHS__DICOM_FILE_PATTERN=*.dcm

# Logging Configuration
LOGGING__LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGING__LOG_FORMAT=json  # Options: json, console
LOGGING__LOG_TO_FILE=true
LOGGING__LOG_TO_CONSOLE=true
LOGGING__MAX_LOG_FILE_MB=10
LOGGING__LOG_ROTATION_COUNT=5

# Feature Flags
ENABLE_PROFILING=false
ENABLE_CRASH_ANALYSIS=true
ENABLE_STATISTICS=true
